<%= employee_breadcrumb do %>
  <%= t 'orders.show.order.header', id: @order.id %>
<% end %>

<div class='flex flex-wrap'>
  <div class='w-full text-center p-4 shadow-sm mb-4 text-xl bg-red-200 rounded-md font-semibold text-red-800'>
    <%= t 'orders.show.order.returned' %>
  </div>
  
  <div class='md:w-1/3'>
    <h3 class='text-2xl font-semibold pb-4'><%= t 'orders.show.ships_to.header' %></h3>
    <div class="bg-white p-4 rounded-md shadow-md">
      <p><%= @order.ships_to.recipient %></p>
      <p><%= @order.ships_to.street_1 %></p>
      <p><%= @order.ships_to.street_2 %></p>
      <p><%= @order.ships_to.city %>, <%= @order.ships_to.state %> <%= @order.ships_to.zip %></p>
    </div>
  </div>

  <div class='md:w-2/3 w-full bg-white rounded-md shadow-md border overflow-hidden'>
    <h3 class='text-2xl font-semibold p-4'><%= t 'orders.show.products.header' %></h3>
    <div>
      <table class='generic-table zebra'>
        <thead>
          <tr>
            <th class='number'><%= t 'orders.show.product_table.thead.quantity' %></th>
            <th><%= t 'orders.show.product_table.thead.name' %></th>
            <th class='number'><%= t 'orders.show.product_table.thead.cost' %></th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td class='number'>
                <div><%= line_item.quantity %></div>
              </td>
              <td><%= line_item.product.name %></td>
              <td class='number'><%= humanized_money_with_symbol line_item.cost %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th class='number' colspan="2"><%= t 'orders.show.product_table.order_total' %></th>
            <td class='number'><%= humanized_money_with_symbol @order.cost %></td>
          </tr>
        </tfoot>
      </table>
    </div>
    
    <div class="p-4 text-center">
      <%= link_to employees_path, class: "px-4 py-2 bg-blue-500 text-white rounded-md" do %>
        <%= t '.back_to_orders' %>
      <% end %>
    </div>
  </div>
</div> 