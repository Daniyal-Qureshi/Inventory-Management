 <div class='mb-4 md:px-2 lg:px-2 w-full md:w-1/2 lg:w-1/2'>
    <div class='bg-white rounded-md shadow-md border overflow-hidden'>
    <h3 class='text-2xl font-bold px-4 py-2'><%= t 'employees.index.returned_products.header' %></h3>
    <table class='generic-table zebra'>
        <thead>
        <tr>
            <th><%= t 'employees.index.returned_products.table.product' %></th>
            <th class='number'><%= t 'employees.index.returned_products.table.quantity' %></th>
            <th><%= t 'employees.index.returned_products.table.actions' %></th>
        </tr>
        </thead>
        <tbody>
        <% @returned_products.each do |product, quantity| %>
            <tr data-id='returned-product-<%= product.id %>'>
            <td>
                <%= product.name %>
            </td>
            <td class='number'>
                <span class="px-2 py-1 bg-red-100 text-red-800 rounded-md"><%= quantity %></span>
            </td>
            <td>
                <%= button_to product_restock_path(product), method: :post, class: 'bg-blue-500 text-white px-2 py-1 rounded-md text-xs' do %>
                <%= t 'employees.index.returned_products.table.restock' %>
                <% end %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>